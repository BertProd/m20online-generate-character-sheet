{
    "name": "bertprod/m20online-generate-character-sheet",
    "type": "project",
    "description": "Project to deploy Microlite20 character sheet generation on your website",
    "keywords": ["RPG", "TTRPG", "Microlite20"],
    "homepage": "https://github.com/BertProd/m20online-generate-character-sheet",
    "license": "MIT",
    "authors": [
        {
            "name": "Bertrand Andres",
            "email": "bertrand.andres.dev@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "bertprod/m20onlinecore": "^0.2.0",
        "bertprod/translate": "^0.1.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.4",
        "slim/twig-view": "^3.2",
        "php-di/php-di": "^6.3",
        "twbs/bootstrap": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "M20Sheet\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "M20Sheet\\Composer\\Helper\\BootstrapHelper::deployBootstrap"
        ],
        "post-update-cmd": [
            "M20Sheet\\Composer\\Helper\\BootstrapHelper::deployBootstrap"
        ]
    }
}
